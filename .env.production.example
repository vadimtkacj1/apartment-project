# MYSQL_USER=apartment_user
# MYSQL_PASSWORD=your_secure_password
# MYSQL_DATABASE=apartment_project

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
