# Секретный ключ для сессий (создайте: openssl rand -base64 32)
# SESSION_SECRET=your_random_session_secret_here

# JWT Secret (если используется)
# JWT_SECRET=your_random_jwt_secret_here
# JWT_EXPIRES_IN=7d

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
